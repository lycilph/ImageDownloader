<UserControl x:Class="ImageDownloader.Views.RunProjectPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:cal="http://www.caliburnproject.org"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Margin="70,20,70,0">
        <metro:FlipView cal:Message.Attach="[Event SelectionChanged] = [ItemChanged]; [Event MouseEnter] = [ShowBanner]; [Event MouseLeave] = [HideBanner]"
                           BannerText="{Binding BannerText}"
                           IsBannerEnabled="{Binding IsBannerShown}">
            <StackPanel>
                <TextBlock Text="Pages"/>
            </StackPanel>
            <StackPanel>
                <TextBlock Text="Images"/>
            </StackPanel>
            <StackPanel>
                <TextBlock Text="Done"/>
                <Button x:Name="Back" Content="Back"/>
            </StackPanel>
        </metro:FlipView>
    </Grid>
</UserControl>
